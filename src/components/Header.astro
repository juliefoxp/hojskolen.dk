---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
import logo from "../assets/images/logo.svg?url";
import Heading from "./Heading.astro";
---

<header class="bg-[#f6eadb] border-b-6 border-[#ff5900] relative z-50">
  <nav class="container mx-auto flex items-center justify-between p-4 relative">
    <!-- Logo -->
    <a
      href="/"
      id="logo"
      class="p-2 transform transition-transform duration-200 hover:scale-105 mx-auto lg:mx-0"
    >
      <img src={logo} alt="Logo" class="h-20 sm:h-24 lg:h-28 w-auto" />
    </a>

    <!-- Burger ikon (kun mobil) -->
    <button
      id="menu-btn"
      class="text-[#ff5900] transform transition-transform duration-200 hover:scale-110 focus:outline-none lg:hidden z-50"
      aria-label="Toggle menu"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Menu links -->
    <ul
      id="menu"
      class="hidden flex-col lg:flex lg:flex-row lg:items-center lg:space-x-12 font-bold text-gray-800 absolute top-full left-0 w-full lg:static lg:w-auto bg-[#f6eadb] lg:bg-transparent shadow-lg z-50"
    >
      <li>
        <a href="/pris" class="inline-block py-3 px-4 lg:py-0 lg:px-0 hover:scale-105 transform transition-transform duration-200">
          PRISER
        </a>
      </li>
      <li>
        <a href="/pris" class="inline-block py-3 px-4 lg:py-0 lg:px-0 hover:scale-105 transform transition-transform duration-200">
          HØJSKOLEOPHOLD
        </a>
      </li>
      <li>
        <a
          href="#"
          class="inline-block py-2 px-5 my-2 lg:my-0 text-white rounded-[25px] transition-colors duration-200"
          style="background-color: #3faaa5;"
          onmouseover="this.style.backgroundColor='#a8d4d1'"
          onmouseout="this.style.backgroundColor='#3faaa5'"
        >
          INFOMØDER
        </a>
      </li>
      <li>
        <a
          href="/pris"
          class="inline-block py-2 px-5 my-2 lg:my-0 text-white rounded-[25px] transition-colors duration-200"
          style="background-color: #ff5900;"
          onmouseover="this.style.backgroundColor='#ff9359'"
          onmouseout="this.style.backgroundColor='#ff5900'"
        >
          TILMELD
        </a>
      </li>
    </ul>
  </nav>

  <script is:inline>
    const menuBtn = document.getElementById('menu-btn');
    const menu = document.getElementById('menu');

    if (menuBtn && menu) {
      menuBtn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    }
  </script>
</header>
