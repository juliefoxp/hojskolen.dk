import img_15 from "../assets/images/img_15.webp";
import img_16 from "../assets/images/img_16.webp";
import img_17 from "../assets/images/img_17.webp";
import img_18 from "../assets/images/img_18.webp";
import img_19 from "../assets/images/img_19.webp";
import img_20 from "../assets/images/img_20.webp";
import img_21 from "../assets/images/img_21.webp";
---

<MainLayout title="Priser">
	<main>

<section class="px-4 py-6 space-y-6 my-16 md:my-24"> 
  <!-- Overskrift med luft under -->
  <Heading 
    htmlheading="h1" 
    size="large" 
    font="overskrift" 
    stylingclasses="font-bold text-center"
  >
    PRISER – HØJSKOLE I UDLANDET
  </Heading>

